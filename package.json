{
  "name": "vibespeak",
  "version": "1.0.0",
  "private": true,
  "description": "VibeSpeak - A self-hosted TeamSpeak-style community voice and text platform",
  "scripts": {
    "dev:server": "pnpm --filter server-brain dev",
    "dev:client": "pnpm --filter local-client dev",
    "dev:all": "concurrently \"pnpm dev:server\" \"pnpm dev:client\"",
    "build": "pnpm -r build",
    "build:server": "pnpm --filter server-brain build",
    "build:client": "pnpm --filter local-client build",
    "start:infra": "docker-compose -f infra/docker-compose.yml up -d",
    "stop:infra": "docker-compose -f infra/docker-compose.yml down"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.18.1",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@playwright/test": "^1.58.2",
    "@types/jsonwebtoken": "^9.0.10",
    "ioredis": "^5.9.3",
    "jsonwebtoken": "^9.0.3",
    "otplib": "^13.3.0",
    "ws": "^8.19.0"
  }
}